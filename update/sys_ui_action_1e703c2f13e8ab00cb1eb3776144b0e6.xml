gr.addQuery('request_number',current.sys_id);
//gr.addQuery('state',3);
gr.addAggregate('COUNT');

gr.query();
if(gr.next()){
	var total = gr.getAggregate('COUNT');
	if(total == 0){
		gs.addErrorMessage('Cannot submit for approval as no tests exist.');
		action.setRedirectURL(current);
		
	}else{
		current.state = 20;
		current.update();
	}
}


